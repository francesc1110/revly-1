<h2> Results </h2>

<% @tracks.each do |track| %>
  <div class="music_player">
    <p>Title: <%=track.title%></p>
    <audio controls preload="none">
      <source src="<%=track.stream_url%>?client_id=<%=SOUNDCLOUD_CLIENT_ID%>" />
    </audio>
    <%= form_tag "/tile_select_song", method: "post" do %>
      <%= hidden_field_tag(:track_id, track.id) %>
      <%= submit_tag("Select") %>
    <% end %>
<!-- <%# link_to "Select", tile_write_message_path %> -->
  </div>
<% end %>

